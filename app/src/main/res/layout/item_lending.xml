<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="25sp"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtBorrowingIdLabel"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Borrowing ID:" />

            <TextView
                android:id="@+id/txtBorrowingId"
                android:layout_width="150sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtUserIdLabel"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="User ID:" />

            <TextView
                android:id="@+id/txtUserId"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtBook1Label"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Book 1:" />

            <TextView
                android:id="@+id/txtBook1"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtBook2Label"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Book 2:" />

            <TextView
                android:id="@+id/txtBook2"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtBorrowingDateLable"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Borrowing Date:" />

            <TextView
                android:id="@+id/txtBorrowingDate"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDueDateLable"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Due Date:" />

            <TextView
                android:id="@+id/txtDueDate"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtReturnDateLable"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Return Date:" />

            <TextView
                android:id="@+id/txtReturnDate"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>